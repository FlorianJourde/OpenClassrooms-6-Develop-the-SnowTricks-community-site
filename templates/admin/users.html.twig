{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}

	{% include 'partials/banner.html.twig' with { is_home: false, background_image: 'mountains-2.jpg', title: block('title') } %}

	<section class="users">
        <div class="wrapper">
            <table class="table">
                <thead>
                    <th>ID</th>
                    <th>Email</th>
                    <th>RÃ´les</th>
                    <th>Actions</th>
                </thead>
                <tbody>
        {#        {{ dump(users) }}#}
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% for role in user.roles %}
                                {{ (role == 'ROLE_USER') ? 'Utilisateur' }}
                                {{ (role == 'ROLE_EDITOR') ? 'Editeur' }}
                                {{ (role == 'ROLE_ADMIN') ? 'Administrateur' }}
                            {% endfor %}
                        </td>
                        <td>
                            <a class="button-primary button-black" href="{{ path('app_admin_edit_user', { 'id' : user.id }) }}">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            {{ include('admin/_delete_user.html.twig') }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>

{% endblock %}
