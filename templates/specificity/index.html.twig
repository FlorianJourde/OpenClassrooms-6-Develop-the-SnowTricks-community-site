{% extends 'base.html.twig' %}

{% block title %}Descriptif technique{% endblock %}

{% block body %}

    {% set actions %}
        <section class="actions-section">
            <div class="actions">
                <a class="button-primary button-black"  href="{{ path('app_specificity_new') }}"><i class="fas fa-pen-nib"></i>Ajouter</a>
            </div>
        </section>
    {% endset %}

	{% include 'partials/banner.html.twig' with { background_image: 'mountains-4.jpg', title: block('title') } %}

	<main class="archive section-spacing">
        <div class="wrapper">

            {% if specificities is not empty %}
                <div class="table-scroll">
                    <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Icône</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for specificity in specificities %}
                        <tr>
                            <td>{{ specificity.id }}</td>
                            <td>{{ specificity.name }}</td>
                            <td>{{ specificity.description }}</td>
                            <td>
                                <img src="{{ asset('/uploads/icons/' ~ specificity.icon ) }}" alt="">
                            </td>
                            <td>
    {#                            <a class="button-primary button-blue" href="{{ path('app_specificity_show', {'id': specificity.id}) }}">#}
    {#                                <i class="fas fa-eye"></i> Voir#}
    {#                            </a>#}
                                <a class="button-primary button-black" href="{{ path('app_specificity_edit', {'id': specificity.id}) }}">
                                    <i class="fas fa-pencil-alt"></i> Modifier
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                </div>
            {% else %}
                <div class="information">
                    <p>Il n'y a aucun descriptif technique à afficher.</p>
                </div>
            {% endif %}

        </div>
	</main>

{% endblock %}
