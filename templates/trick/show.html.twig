{% extends 'base.html.twig' %}

{% block title %}Trick{% endblock %}

{% block body %}
    <h1>Trick</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trick.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ trick.name }}</td>
            </tr>
            <tr>
                <th>Creation_date</th>
                <td>{{ trick.creationDate ? trick.creationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_trick_index') }}">back to list</a>

    {% if is_granted('ROLE_EDITOR') %}
        <a href="{{ path('app_trick_edit', {'id': trick.id}) }}">edit</a>
    {% endif %}

    {% if is_granted('ROLE_EDITOR') %}
        {{ include('trick/_delete_form.html.twig') }}
    {% endif %}

    {{ include('trick/_images.html.twig') }}

    {% if trick.comments is not empty %}
        <h2>Comments</h2>

        {% for comment in trick.comments %}
            <p>{{ comment.creationDate|date("m/d/Y") }} | <span>{{ comment.content }}</span></p>
        {% endfor %}
    {% endif %}

    {% if is_granted('ROLE_USER') %}
        {{ include('trick/_add_comment_form.html.twig') }}
    {% else %}
        <h3>Veuillez vous connecter pour laisser un commentaire.</h3>
    {% endif %}

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/images.js') }}"></script>
{% endblock %}