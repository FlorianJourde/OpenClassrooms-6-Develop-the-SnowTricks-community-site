{% extends 'base.html.twig' %}

{% block title %}Tricks{% endblock %}

{% block body %}

    {% set actions %}
        {% if is_granted('ROLE_EDITOR') %}
        <section class="actions-section">
            <div class="actions">
                <a class="button-primary button-black" href="{{ path('app_trick_new') }}"><i class="fas fa-pen-nib"></i>Ajouter</a>
            </div>
        </section>
        {% endif %}
    {% endset %}

	{% include 'partials/banner.html.twig' with { background_image: 'mountains-1.jpg', title: block('title') } %}

	<main class="archive section-spacing">
        <div class="wrapper">

{#            <div class="actions">#}
{#                <a class="button-primary button-black" href="{{ path('app_trick_new') }}"><i class="fas fa-pen-nib"></i>Ajouter</a>#}
{#            </div>#}

            <div class="table-scroll">
                <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Cr√©ation</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for trick in tricks %}
                        <tr>
                            <td>{{ trick.id }}</td>
                            <td>{{ trick.name }}</td>
                            <td>{{ trick.creationDate ? trick.creationDate|date("m/d/Y") : '' }}</td>
                            <td>

                                {% if trick.images|first %}
{#                                    {{ dump(trick.images|first.name) }}#}
{#                                    trick.images|first.name#}
                                    <img src="{{ asset('uploads/tricks/' ~ trick.images|first.name) }}" alt="">
                                {% endif %}
                            </td>
                            <td>
                                <a class="button-primary button-blue" href="{{ path('app_trick_show', {'id': trick.id}) }}">
                                    <i class="fas fa-eye"></i> Voir
                                </a>
                                {% if is_granted('ROLE_EDITOR') %}
                                    <a class="button-primary button-black" href="{{ path('app_trick_edit', {'id': trick.id}) }}">
                                        <i class="fas fa-pencil-alt"></i> Modifier
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            </div>
        </div>
    </main>
{% endblock %}
