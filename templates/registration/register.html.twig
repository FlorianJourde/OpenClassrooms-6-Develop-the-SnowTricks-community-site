{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

{% include 'partials/banner.html.twig' with { background_image: 'mountains-1.jpg', title: block('title') } %}

<section class="register section-spacing">
    <div class="wrapper wrapper-small">

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe' }) }}
        {{ form_row(registrationForm.agreeTerms, { label: 'Accepter les condition d\'utilisation' }) }}
        <button type="submit" class="button-primary button-black button-large"><i class="fas fa-user-plus" aria-hidden="true"></i> S'inscrire</button>
    {{ form_end(registrationForm) }}

    </div>
</section>

{% endblock %}
